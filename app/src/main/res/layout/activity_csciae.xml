<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.niu.cs.sindhujagundreddy.gradecalculator.Csciae"
    android:background="#D7BDE2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSCI 240"
        android:id="@+id/textView11"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="75dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the marks you secured for the following Exams"
        android:id="@+id/textView12"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:textAlignment="center" />

    <TableRow android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/exam1EditText"
        android:numeric="integer"
        android:maxLength="3"
        android:textStyle="bold|italic"
        android:hint="Exam1"/>

    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/exam2EditText"
        android:numeric="integer"
        android:maxLength="3"
        android:textStyle="bold|italic"
        android:hint="Exam2"/>

    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp">
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/exam3EditText"
        android:numeric="integer"
        android:maxLength="3"
        android:textStyle="bold|italic"
        android:hint="Exam3"/>
    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/doneButton"
        android:onClick="gotoResult"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold|italic"
        android:textSize="20dp" />
    </TableRow>
</TableLayout>
