<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.niu.cs.sindhujagundreddy.gradecalculator.Cscib"
    android:orientation="vertical"
    android:background="#F8C471">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSCI 241"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="75dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the marks you secured for the following quizes"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        android:textStyle="bold|italic"
        android:textAlignment="center" />

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz1EditText"
            android:hint="Quiz1"
            android:layout_column="1"
            android:textStyle="bold|italic" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz7EditText"
            android:hint="Quiz7"
            android:layout_column="2"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic" />
    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz2EditText"
            android:hint="Quiz2"
            android:layout_column="1"
            android:textStyle="bold|italic" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz8EditText"
            android:hint="Quiz8"
            android:layout_column="2"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic" />

    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz3EditText"
            android:layout_column="1"
            android:hint="Quiz3"
            android:layout_below="@+id/quiz4EditText"
            android:layout_alignParentStart="true"
            android:textStyle="bold|italic" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz9EditText"
            android:layout_column="2"
            android:hint="Quiz9"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic" />

    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz4EditText"
            android:layout_column="1"
            android:hint="Quiz4"
            android:textStyle="bold|italic" />


        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz10EditText"
            android:layout_column="2"
            android:hint="Quiz10"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic" />
    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz5EditText"
            android:layout_column="1"
            android:hint="Quiz5"
            android:textStyle="bold|italic" />


        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_column="2"
            android:id="@+id/quiz11EditText"
            android:hint="Quiz11"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic" />
    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz6EditText"
            android:layout_column="1"
            android:hint="Quiz6"
            android:textStyle="bold|italic" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quiz12EditText"
            android:hint="Quiz12"
            android:layout_column="2"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic" />
    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/nextButton"
            android:onClick="gotoAssn"
            android:layout_column="2"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic"
            android:background="#D6DBDF"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />
    </TableRow>


</TableLayout>
